<!--小喇叭公告-->
<view  bindtap='tzshow' style="background: #2c3e50;">
  <view  class="Notice" >
    <image class="pho"  src="/images/laba.png"></image>
    <view class="NoticeBox" >
      <view class="NoticeBoxMove" style="top:-{{Top}}rpx"  data-index="{{index}}" catchtap="gotoTopic">
        <view class="NoticeList" bindtouchstart="{{NoticeList.length > 1 ? 'EndMerro':''}}" catchtouchend="{{NoticeList.length > 1 ? 'StarMerro':''}}">
          <view class="color_3 size26"></view>
          <view   bindtap='tzshow' class="text1" >{{title}}</view>
        </view>
      </view>
    </view>
    <!--<image class="right" src="/images/chacha.png" bindtap="closeTot"></image>-->
  </view>
</view>
<!--轮播图-->
<view class="swiper-container">
 <swiper autoplay="auto" interval="5000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
  <block wx:for="{{Images}}" wx:key="unique">
   <swiper-item>
    <image src="{{item.image}}" class="img"></image>
   </swiper-item>
  </block>
 </swiper>
 <view class="dots">
  <block wx:for="{{Images}}" wx:key="unique">
   <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
  </block>
 </view>
</view>

<!--搜索-->
<view class="absolute-panel search-top">
  <view class="search panel-center item-center" bindtap="navToSearch">
    <image src="/images/gonyong/search.png" class="icon-lg"></image>
    <view class="font-lg margin-left-xs">搜索商品</view>
  </view>
</view>
<!--中间二级入口-->
<view class="iconlist">
  <view class="item" wx:for="{{index_item}}" bindtap="item" id="{{index}}" >
    <image src="{{item.img}}"></image>
    <view>{{item.text}}</view>
  </view>
</view>
<!--热门推荐-->
<view class="panel .margin-top-xs center font-standrad  tuijian">
  <image class="line margin-right-sm" src="/images/gonyong/line.png"></image>
  <image src="/images/index/hot.png" style="width:32rpx;height:32rpx;margin-right:13rpx"></image>
  <text style="font-weight:bold;color:#454545">爆款推荐</text> 
  <image class="line margin-left-sm" src="/images/gonyong/line.png"></image>
</view>
<!--商铺列表-->

<view class="panel  glist" bindtap="navToShop" wx:for="{{list}}" data-id='{{item.sunwouId}}'>
  <view class="pho">
    <image class="p1 " src="{{item.image[0]}}" ></image>
  </view>
  <view class="con">
    <view class="tit" >{{item.name}}</view>
    <view class="txt">
      <view class='zhe' wx:if="{{item.discount!=1}}">折后价</view>
      <view style="font-size:30rpx;color:#ef5b5b;font-weight:bold;margin-left:15rpx">￥{{item.min==item.max?item.dismin:item.dismin+'~'+item.dismax}}</view>
    </view>
     <view class="tet">
      <text style="font-size:23rpx;position:relative;" wx:if="{{item.discount!=1}}">原价￥{{item.min==item.max?item.min:item.min+'~'+item.max}}</text>
      <text style="margin-left:12rpx;margin-right:12rpx;font-weight:bold;font-size:20rpx;color:#c1c1c1">|</text>
      <text style="font-size:23rpx;position:relative;">销量 {{item.sales}}</text> 
    </view> 
  </view>
   <view class="status">
    <text wx:if="{{item.discount!=1}}">{{item.discount*10}}折</text>
    <text class='tt'>{{item.categoryId<4?'商超直营':'本地商家'}}</text>
    <text class='xq'>查看详情</text>
  </view> 
</view>

<view class="panel-center margin-bottom-sm margin-top-sm">
  <image class="line margin-top-sm" src="/images/gonyong/line.png"></image>
  <view class=" margin-left-sm" style="font-size:30rpx; color:#888">{{list.length==0?'暂无商品':haveMore?'加载更多':'一言不合就扯我(⊙o⊙)'}}</view>
  <image class="line margin-left-sm margin-top-sm" src="/images/gonyong/line.png"></image>
</view>


<!--签到弹窗界面-->
<view  class="goodsdetail {{showdetail ? '':'hide'}}">
  <view class="gdpanel">
    <view class='chaCha' bindtap="close"> x</view>
    <view class='biaoTi'>每日签到</view>
    <view class='flex-between item-center biaoTi'>
    <view wx:for="{{signDetail}}">
      <view class='flexc-start item-center'>
       <!-- <view class='font-26-white'>+2</view> -->
        <image wx:if="{{item==1}}" class='icon-sanshi margin-top-ershi' src="/images/gonyong/jiaoY1.png"/>
        <image wx:if="{{item==0}}" class='icon-sanshi margin-top-ershi' src="/images/gonyong/jiaoY2.png"/>
        <view class='font-26-white margin-top-ershi'>星期{{index+1}}</view>
      </view>
    </view>
    </view>
    <view class='text-center padding-er-san margin-top-ershi'>
      <image class='icon-bai' src="/images/gonyong/qianDao.png" bindtap="qianDao"/>
    </view>
    <view class='flexr-between item-center padding-ershi'>
      <view class='font-26-white'>我的积分：{{source}}</view>
        <view class='flexr-start item-center' bindtap="navTojiFen">
          <view class='font-26-white'>积分商城</view>
          <image class='icon-ershi margin-left-ershi' src="/images/fl.png"/>
        </view>
    </view>
  </view>
</view> 


